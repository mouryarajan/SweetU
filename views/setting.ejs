<body>
	<%- include('includes/sidebar.ejs') %>
	<!-- /.main-menu -->

	<%- include('includes/header.ejs') %>
		<!-- /.fixed-navbar -->
<!-- /.fixed-navbar -->

<div id="wrapper">
	<div class="main-content">
		<div class="row">
			<div class="col-lg-12 col-xs-12">
				<div class="box-content card white">
					<h4 class="box-title">Settings For New User</h4>
					<!-- /.box-title -->
					<div class="card-content">
						<form method="POST" action="/settings" >
						<label for="inputCoin">Coins</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.bonus_coin %>" name="inputCoin" class="form-control" placeholder="Coin..." />
                            <div class="input-group-btn"><button type="submit" class="btn btn-violet no-border waves-effect waves-light"><i class="fa fa-diamond text-white"></i></button></div>
						</div>
						<label for="inputCoin">Call Duration</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.call_duration %>" name="inputWallet" class="form-control" placeholder="Call Duration..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-success no-border waves-effect waves-light"><i class="fa fa-inr text-white"></i></button></div>
                            <!-- /.input-group-btn -->
						</div>
						<label for="inputCoin">Call Rate</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.call_rate %>" name="inputCallRate" class="form-control" placeholder="Call Rate..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-orange no-border waves-effect waves-light"><i class="fa fa-phone text-white"></i></button></div>
                            <!-- /.input-group-btn -->
						</div>
						<label for="inputCoin">Start Call Rate</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.start_call_rate %>" name="inputStartCallRate" class="form-control" placeholder="Call Rate..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-orange no-border waves-effect waves-light"><i class="fa fa-phone text-white"></i></button></div>
                            <!-- /.input-group-btn -->
						</div>
						<label for="inputGender">Gender change cost for Both</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.gender_change_both %>" name="inputGenderChange" class="form-control" placeholder="Gender Change Cost..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-orange no-border waves-effect waves-light"><i class="fa fa-phone text-white"></i></button></div>
                            <!-- /.input-group-btn -->
						</div>
						<label for="inputGender">Gender change cost for Male</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.gender_change_male %>" name="inputGenderChange" class="form-control" placeholder="Gender Change Cost..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-orange no-border waves-effect waves-light"><i class="fa fa-phone text-white"></i></button></div>
                            <!-- /.input-group-btn -->
						</div>
						<label for="inputGender">Gender change cost for Female</label>
						<div class="input-group margin-bottom-20">
							<input type="text" value="<%= result.gender_change_female %>" name="inputGenderChange" class="form-control" placeholder="Gender Change Cost..." />
							<div class="input-group-btn"><button type="submit" class="btn btn-orange no-border waves-effect waves-light"><i class="fa fa-phone text-white"></i></button></div>
                            <!-- /.input-group-btn -->
                        </div>
                        </form>
					</div>
					<!-- /.card-content -->
				</div>
				<!-- /.box-content card white -->
			</div>
			<!-- /.col-lg-4 col-xs-12 -->
        </div>
        <%- include('includes/footer.ejs') %>
	</div>
	<!-- /.main-content -->
</div><!--/#wrapper -->
